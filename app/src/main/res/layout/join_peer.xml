<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutJoin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textViewJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send JOIN message to Bootstrap"></TextView>

    <EditText
        android:id="@+id/editBootAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewJoin"
        android:text=""></EditText>

    <Button
        android:id="@+id/sendJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editBootAddress"
        android:text="Send JOIN"></Button>

</RelativeLayout>
